<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="library_book_bibliotecas_tree" model="ir.ui.view">
        <field name="name">Bibliotecas.tree</field>
        <field name="model">library</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="diretor" />
            </tree>
        </field>
    </record>

    <record id="library_book_bibliotecas_form" model="ir.ui.view">
        <field name="name">Bibliotecas.form</field>
        <field name="model">library</field>
        <field name="arch" type="xml">
            <form>
                 <div class="oe_left oe_title">
                    <label for="name" />
                    <h1>
                        <field name="name" />
                    </h1>
                </div>
                <group>
                    <field name="diretor" />
                </group>
                <field name="livros_ids" />
            </form>
        </field>
    </record>

</odoo>
